#!/bin/bash
set -x

source ${OPENSHIFT_HOMEDIR}app-root/runtime/dependencies/python/virtenv/bin/activate

cd ${OPENSHIFT_DATA_DIR}
rm -rf ep_meps_current.json.xz
wget http://parltrack.euwiki.org/dumps/ep_meps_current.json.xz

cd ${OPENSHIFT_REPO_DIR}
export DJANGO_SETTINGS_MODULE=memopol.settings
unxz -c ${OPENSHIFT_DATA_DIR}ep_meps_current.json.xz | parltrack_import_representatives
