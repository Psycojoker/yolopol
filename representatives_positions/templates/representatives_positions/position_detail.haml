- extends 'base.html'

- load humanize

- block content
  - include 'representatives/_representative_block.html' with representative=object.representative
  .quote

    %p.quote-header
      {{object.datetime|naturalday}}, {{object.representative.full_name}} declared :

    .long-quote
      = object.text|linebreaks

    %p
      Source :
      %a{:href => '{{object.link}}'}
        = object.link
